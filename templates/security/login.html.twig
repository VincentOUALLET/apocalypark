{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

<div class="d-flex containerBoxes rounded p-5 row mt-5 justify-content-between">
    <form method="post" class="col-6 col-12-sm">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {# {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %} #}
        <h3 class="mb-3 font-weight-normal">Mais qu'attendez-vous...</h3>
        <h3 class="mb-3 font-weight-normal">Connectez vous!</h3>
        <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
        <label for="inputPassword">Mot de passe</label>
        <input type="password" name="password" id="inputPassword" class="form-control" required>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        
            {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html #}

            {# <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Se souvenir de moi
                </label>
            </div> #}
       

        <button class="btn btn-lg btn-primary mt-5" type="submit">
            Se connecter
        </button>
    </form>
    <div class="col-6 col-12-md">
        <div class="row justify-content-center">
            <p class="">Pas encore inscrit?</p>
        </div>
        <div class="row justify-content-center">
            <a class="btn btn-primary mt-4" href="inscription">Inscrivez-vous ici</a>
        </div>
    </div>
    
</div>
{% endblock %}
